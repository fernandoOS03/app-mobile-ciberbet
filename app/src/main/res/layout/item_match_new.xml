<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardBackgroundColor="#2C2C2C"
    app:cardCornerRadius="14dp"
    app:cardElevation="3dp"
    app:strokeColor="#3E3E3E"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- ðŸ”¹ Cabecera: Deporte y Estado -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvDeporteEvento"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="FÃºtbol"
                android:textSize="12sp"
                android:textColor="#CFCFCF"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvEstadoEvento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EN VIVO"
                android:textSize="12sp"
                android:textColor="#FF5252"
                android:background="@drawable/bg_estado_en_vivo"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp"
                android:textStyle="bold"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- âš½ Equipos enfrentados -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:orientation="horizontal">

            <!-- Equipo local -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/ivTeam1"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_team_placeholder"
                    android:contentDescription="Equipo local" />

                <TextView
                    android:id="@+id/tvTeam1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="Chelsea"
                    android:textColor="@android:color/white"
                    android:textSize="13sp"
                    android:gravity="center" />
            </LinearLayout>

            <!-- Marcador -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginHorizontal="12dp">

                <TextView
                    android:id="@+id/tvScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 : 2"
                    android:textColor="@android:color/white"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/tvTiempo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="49:30"
                    android:textColor="#F44336"
                    android:textSize="12sp"
                    android:drawableStart="@drawable/ic_live_dot"
                    android:drawablePadding="4dp" />
            </LinearLayout>

            <!-- Equipo visitante -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/ivTeam2"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_team_placeholder"
                    android:contentDescription="Equipo visitante" />

                <TextView
                    android:id="@+id/tvTeam2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="Leicester"
                    android:textColor="@android:color/white"
                    android:textSize="13sp"
                    android:gravity="center" />
            </LinearLayout>
        </LinearLayout>

        <!-- ðŸ“… Fecha y lugar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvFechaHora"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="15/11/2025 - 20:00"
                android:textSize="12sp"
                android:textColor="#AFAFAF" />

            <TextView
                android:id="@+id/tvUbicacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stamford Bridge"
                android:textSize="12sp"
                android:textColor="#AFAFAF"
                android:drawableStart="@drawable/ic_location"
                android:drawablePadding="4dp" />
        </LinearLayout>

        <!-- ðŸ’° Cuotas -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <Button
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1.8"
                android:textColor="#CFCFCF"
                app:strokeColor="#555555" />

            <Button
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginHorizontal="8dp"
                android:text="2.1"
                android:textColor="#CFCFCF"
                app:strokeColor="#555555" />

            <Button
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1.3"
                android:textColor="#CFCFCF"
                app:strokeColor="#555555" />
        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
