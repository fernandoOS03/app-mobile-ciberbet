<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    >

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:navigationIcon="@drawable/ic_back_arrow">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mi perfil"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_gravity="center"/>
    </com.google.android.material.appbar.MaterialToolbar>

    <ImageView
        android:id="@+id/ivProfileIcon"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/ic_profile"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="#424242" />

    <TextView
        android:id="@+id/tvProfileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gabriel Lopez"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/ivProfileIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvProfileEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="example.correo@gmail.com"
        android:textColor="#757575"
        app:layout_constraintTop_toBottomOf="@id/tvProfileName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/divider1"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#E0E0E0"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvProfileEmail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvSaldoLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Saldo disponible: S/. 250"
        android:textColor="#757575"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/divider1"
        app:layout_constraintStart_toStartOf="@id/divider1"/>

    <LinearLayout
        android:id="@+id/layoutSaldoButtons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvSaldoLabel"
        app:layout_constraintStart_toStartOf="@id/divider1"
        app:layout_constraintEnd_toEndOf="@id/divider1">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Depositar"
            android:backgroundTint="#F44336"
            android:layout_marginEnd="8dp"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Retirar"
            android:backgroundTint="#1976D2"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <View
        android:id="@+id/divider2"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#E0E0E0"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/layoutSaldoButtons"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="24dp"/>

    <TextView
        android:id="@+id/tvEstadisticas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Estadísticas\nApuestas ganadas: 24\nApuestas perdidas: 15\nPorcentaje de Éxito: 62.5%"
        android:textColor="#757575"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/divider2"
        app:layout_constraintStart_toStartOf="@id/divider2"/>

    <TextView
        android:id="@+id/tvVisualizarLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Visualizar"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvEstadisticas"
        app:layout_constraintStart_toStartOf="@id/tvEstadisticas"/>

    <Button
        android:id="@+id/btnMostrarApuestas"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Mostrar mis apuestas"
        android:textColor="#757575"
        app:strokeColor="#E0E0E0"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvVisualizarLabel"
        app:layout_constraintStart_toStartOf="@id/divider2"
        app:layout_constraintEnd_toEndOf="@id/divider2"/>

    <Button
        android:id="@+id/btnMostrarTransacciones"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Mostrar mis transacciones"
        android:textColor="#757575"
        app:strokeColor="#E0E0E0"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/btnMostrarApuestas"
        app:layout_constraintStart_toStartOf="@id/divider2"
        app:layout_constraintEnd_toEndOf="@id/divider2"/>

    <View
        android:id="@+id/divider3"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#E0E0E0"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/btnMostrarTransacciones"
        app:layout_constraintStart_toStartOf="@id/divider2"
        app:layout_constraintEnd_toEndOf="@id/divider2"/>

    <TextView
        android:id="@+id/tvActualizarLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Actualizar información"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/divider3"
        app:layout_constraintStart_toStartOf="@id/divider3"/>

    <Button
        android:id="@+id/btnConfiguracion"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Actualizar información"
        android:textColor="#757575"
        app:strokeColor="#E0E0E0"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvActualizarLabel"
        app:layout_constraintStart_toStartOf="@id/divider3"
        app:layout_constraintEnd_toEndOf="@id/divider3"/>


    <Button
        android:id="@+id/btnEliminarCuenta"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:backgroundTint="#F44336"
        android:textColor="#E0E0E0"
        android:text="Eliminar cuenta"
        app:layout_constraintEnd_toEndOf="@+id/divider3"
        app:layout_constraintStart_toStartOf="@+id/divider3"
        app:layout_constraintTop_toBottomOf="@+id/divider3"
        />


</androidx.constraintlayout.widget.ConstraintLayout>